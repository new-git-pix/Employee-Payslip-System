<UserControl x:Class="EmployeePayslipSystem.Views.PayslipPrintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White"
             Width="700">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0,0,0,2" Padding="10">
            <StackPanel>
                <TextBlock Text="EMPLOYEE PAYSLIP" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="XYZ Company Pvt. Ltd." FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <TextBlock x:Name="txtMonthYear" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <Border BorderBrush="Black" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">Employee Information</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Employee ID: " FontWeight="Bold" Width="120"/>
                            <TextBlock x:Name="txtEmployeeId"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Name: " FontWeight="Bold" Width="120"/>
                            <TextBlock x:Name="txtEmployeeName"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Designation: " FontWeight="Bold" Width="120"/>
                            <TextBlock x:Name="txtDesignation"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">Attendance Details</TextBlock>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Total Working Days: " FontWeight="Bold" Width="150"/>
                            <TextBlock x:Name="txtTotalWorkingDays"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Leave Days: " FontWeight="Bold" Width="150"/>
                            <TextBlock x:Name="txtLeaveDays"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Worked Days: " FontWeight="Bold" Width="150"/>
                            <TextBlock x:Name="txtWorkedDays"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <Border BorderBrush="Black" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="EARNINGS" FontWeight="Bold" FontSize="14" Background="LightGray" Padding="5" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Basic Salary" Margin="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtBasicSalary" Margin="5" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="HRA" Margin="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtHRA" Margin="5" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="DA" Margin="5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtDA" Margin="5" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Other Allowance" Margin="5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtOtherAllowance" Margin="5" HorizontalAlignment="Right"/>

                            <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="5"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="GROSS SALARY" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtGrossSalary" FontWeight="Bold" Margin="5" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="DEDUCTIONS" FontWeight="Bold" FontSize="14" Background="LightGray" Padding="5" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Provident Fund (PF)" Margin="5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtPF" Margin="5" HorizontalAlignment="Right"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="ESI" Margin="5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtESI" Margin="5" HorizontalAlignment="Right"/>

                            <Separator Grid.Row="2" Grid.ColumnSpan="2" Margin="5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="TOTAL DEDUCTIONS" FontWeight="Bold" Margin="5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtTotalDeductions" FontWeight="Bold" Margin="5" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <Border BorderBrush="Black" BorderThickness="2" Background="LightYellow" Padding="15" Margin="0,15,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="NET SALARY: " FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtNetSalary" FontSize="18" FontWeight="Bold" Foreground="Green" Margin="10,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <TextBlock Text="This is a computer-generated payslip and does not require a signature." 
                       FontSize="10" 
                       FontStyle="Italic" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>
            <Button x:Name="btnPrint" Content="Print" Click="btnPrint_Click" Width="100" Height="35" Background="DarkBlue" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>