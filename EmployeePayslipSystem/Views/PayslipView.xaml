<UserControl x:Class="EmployeePayslipSystem.Views.PayslipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Generate Payslip" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <TextBlock Text="Select Employee"/>
                    <ComboBox ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedEmployee}"
                              DisplayMemberPath="EmployeeName"
                              Margin="0,5,0,10"/>

                    <TextBlock Text="Employee Name"/>
                    <TextBox Text="{Binding EmployeeName}" IsReadOnly="True" Margin="0,5,0,10"/>

                    <TextBlock Text="Designation"/>
                    <TextBox Text="{Binding Designation}" IsReadOnly="True" Margin="0,5,0,10"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0">
                    <TextBlock Text=" " FontSize="18" Margin="0,0,0,15"/>

                    <TextBlock Text="Month"/>
                    <ComboBox SelectedValue="{Binding Month}" 
              SelectedValuePath="Tag"
              Margin="0,5,0,10">
                        <ComboBoxItem Content="January" Tag="1"/>
                        <ComboBoxItem Content="February" Tag="2"/>
                        <ComboBoxItem Content="March" Tag="3"/>
                        <ComboBoxItem Content="April" Tag="4"/>
                        <ComboBoxItem Content="May" Tag="5"/>
                        <ComboBoxItem Content="June" Tag="6"/>
                        <ComboBoxItem Content="July" Tag="7"/>
                        <ComboBoxItem Content="August" Tag="8"/>
                        <ComboBoxItem Content="September" Tag="9"/>
                        <ComboBoxItem Content="October" Tag="10"/>
                        <ComboBoxItem Content="November" Tag="11"/>
                        <ComboBoxItem Content="December" Tag="12"/>
                    </ComboBox>

                    <TextBlock Text="Year"/>
                    <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

                    <TextBlock Text="Total Working Days"/>
                    <TextBox Text="{Binding TotalWorkingDays}" IsReadOnly="True" Background="LightGray" Margin="0,5,0,10"/>

                    <TextBlock Text="Leave Days"/>
                    <TextBox Text="{Binding LeaveDays, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,10"/>

                    <TextBlock Text="Worked Days"/>
                    <TextBox Text="{Binding WorkedDays}" IsReadOnly="True" Background="LightGray" Margin="0,5,0,10"/>
                </StackPanel>


                <StackPanel Grid.Column="2" Margin="10,0,0,0">
                    <TextBlock Text="Salary Breakdown" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Basic Salary:" Margin="0,3"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BasicSalary, StringFormat=₹{0:N2}}" FontWeight="Bold" Margin="5,3"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="HRA:" Margin="0,3"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding HRA, StringFormat=₹{0:N2}}" Margin="5,3"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="DA:" Margin="0,3"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DA, StringFormat=₹{0:N2}}" Margin="5,3"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Other Allowance:" Margin="0,3"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding OtherAllowance, StringFormat=₹{0:N2}}" Margin="5,3"/>

                        <Separator Grid.Row="4" Grid.ColumnSpan="2" Margin="0,5"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Gross Salary:" FontWeight="Bold" Margin="0,3"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding GrossSalary, StringFormat=₹{0:N2}}" FontWeight="Bold" Foreground="Green" Margin="5,3"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Deductions (PF+ESI):" Margin="0,3"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding TotalDeductions, StringFormat=₹{0:N2}}" Foreground="Red" Margin="5,3"/>

                        <Separator Grid.Row="7" Grid.ColumnSpan="2" Margin="0,5"/>

                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Net Salary:" FontSize="14" FontWeight="Bold" Margin="0,3"/>
                        <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding NetSalary, StringFormat=₹{0:N2}}" FontSize="14" FontWeight="Bold" Foreground="DarkGreen" Margin="5,3"/>
                    </Grid>

                    <Button Content="Generate Payslip"
                            Command="{Binding GeneratePayslipCommand}"
                            Background="DarkGreen"
                            Foreground="White"
                            Height="35"
                            Margin="0,15,0,0"
                            FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Generated Payslips" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Payslips}"
                          SelectedItem="{Binding SelectedPayslip}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="100"/>
                        <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="150"/>
                        <DataGridTextColumn Header="Month-Year" Binding="{Binding MonthYear}" Width="120"/>
                        <DataGridTextColumn Header="Worked Days" Binding="{Binding WorkedDays}" Width="100"/>
                        <DataGridTextColumn Header="Leave Days" Binding="{Binding LeaveDays}" Width="100"/>
                        <DataGridTextColumn Header="Net Salary" Binding="{Binding NetSalary, StringFormat=₹{0:N2}}" Width="120"/>
                        <DataGridTextColumn Header="Generated Date" Binding="{Binding GeneratedDate, StringFormat=dd-MMM-yyyy}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="2"
                        Content="Print Selected Payslip"
                        Command="{Binding PrintPayslipCommand}"
                        Background="DarkBlue"
                        Foreground="White"
                        Height="35"
                        Width="200"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>